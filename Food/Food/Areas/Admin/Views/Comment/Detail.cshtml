@model Comment;
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-header" style="display:flex;justify-content:space-between">
                <h3>
                    Comment
                </h3>
                <div>
                    <a asp-action="Index" class="btn btn-danger text-white rounded-pill" style="margin-right:10px">Geri</a>

                    <a class="btn btn-info text-white rounded-pill" style="margin-right:10px" asp-action="SendStudentSms">Email</a>
                </div>
            </div>

            <div class="table-responsive">

                <table class="display nowrap" style="width:100%">
                    <thead>
                        <tr>

                            
                            <th>Name</th>
                           
                            <th>Description</th>
                            <th>Aktivdir?</th>
                            



                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>@Model.NameCustoms</td>
                            <td>@Model.CommentDescription</td>

                           


                            <td>
                                @if (Model.IsDeactive)
                                {
                                    <span style="padding:1px 2px; background-color:red;color:white">Xeyr</span>
                                }
                                else
                                {
                                    <span style="padding:1px 2px; background-color:green;color:white">Bəli</span>
                                }
                            </td>

                        </tr>


                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

